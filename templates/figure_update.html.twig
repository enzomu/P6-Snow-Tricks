
{% extends 'base.html.twig' %}

{% block content %}
    {% if not app.user or not app.user.isVerified %}
        <div class="alert alert-danger">
            Vous n'avez pas les droits nécessaires pour accéder à cette page.
        </div>
    {% else %}
        <div class="container mt-4">
            <h1 class="h3 mb-4 text-gray-800">Modifier la figure</h1>

            {% include 'partials/_figure_form.html.twig' with {
                'form': form,
                'submitButtonText': 'Enregistrer les modifications',
                'submitButtonColor': 'primary'
            } %}
        </div>

        {% include 'partials/_figure_modal.html.twig' %}

        <script src="{{ asset('js/figure-form.js') }}"></script>
    {% endif %}
{% endblock %}
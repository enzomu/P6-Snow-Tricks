{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block content %}
    <div class="container mt-5 mb-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        <h1 class="h3 mb-4 text-center">Réinitialiser votre mot de passe</h1>

                        {{ form_start(requestForm, { method: 'POST' }) }}
                        <div class="mb-3">
                            {{ form_label(requestForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(requestForm.email, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-2">Réinitialiser</button>
                        {{ form_end(requestForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
